<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="WindowTitle">
        <item name="android:textSize">22sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TaskName">
        <item name="android:textSize">18sp</item>
        <item name="android:paddingLeft">3dip</item>
        <item name="android:paddingRight">2dip</item>
         <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SecondRow">
        <item name="android:paddingLeft">2dip</item>
        <item name="android:paddingRight">2dip</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SecondRowLabel" parent="@style/SecondRow">
        <item name="android:textColor">@color/grey66</item>
    </style>

    <style name="SecondRowValue" parent="@style/SecondRow">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="EditLabel">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/lightgrey</item>
        <item name="android:paddingRight">2dip</item>
        <item name="android:paddingLeft">3dip</item>
    </style>

    <style name="ValueText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingRight">2dip</item>
        <item name="android:paddingLeft">3dip</item>
    </style>
          
        
        
    <style name="EditText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingRight">2dip</item>
        <item name="android:paddingLeft">3dip</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="Flowtext" parent="@style/EditText">
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">right|top</item>
    </style>

    <style name="SeekBar">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">3dip</item>
        <item name="android:paddingRight">5dip</item>
        <item name="android:paddingLeft">5dip</item>
    </style>

    <style name="Separator">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:contentDescription">"Separator"</item>
    </style>

    <style name="PlusButton">
        <item name="android:background">@drawable/btn_circle_normal</item>
        <item name="android:src">@drawable/ic_btn_round_plus</item>
    </style>

    <style name="MinusButton">
        <item name="android:background">@drawable/btn_circle_normal</item>
        <item name="android:src">@drawable/ic_btn_round_minus</item>
    </style>
    <style name="DialogLikeActivity" parent="@android:style/Theme.Dialog">
          <item name="android:windowFrame">@null</item>
          <item name="android:windowBackground">@drawable/gradientbackground</item>      	
    </style>
    <style name="TaskNameItalic" parent="TaskName">
        <item name="android:textStyle">italic</item>
    </style>

</resources>